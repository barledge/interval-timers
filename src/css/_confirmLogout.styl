.app-confirm-logout
	position fixed
	left 5%
	right 5%
	top 25vh
	height 20vmax
	margin 0 auto
	background-color $black0
	border 3px solid $red
	{$flex-row-wrap}
	align-items center
	justify-content space-around
	z-index 1001
	opacity 1 !important
	
.confirm-logout__heading
	flex 0 1 95%
	text-align center
	color $white

.confirm-logout__button
	{$button}
	flex 0 1 30%
	align-self center

.confirm-logout__yes
	border-color $green
	color $green
	
.confirm-logout__no
	border-color $red
	color $red

.confirm-logout__overlay
	position fixed
	top 0
	left 0
	height 100vh
	z-index 1000
	width 100vw
	background-color rgba(112, 112, 112, 0.8)
