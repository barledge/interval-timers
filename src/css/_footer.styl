.footer
	align-self flex-end
	width 100%
	font-size 1rem
	{$flex-row-wrap}
	justify-content space-between
	z-index 1

.footer-item
	flex 1 1 25%
	text-align center
	color $black4
	background-color $black0
	padding 10px
	transition 0.5s all ease
	&:active,
	&:focus
		color $white
		text-decoration none
		background-color $black3
