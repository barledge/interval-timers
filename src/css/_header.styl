.header
	position fixed
	top 0
	display flex
	width 100%
	justify-content space-around
	align-items center
	align-self flex-start
	background-color $black0
	z-index 1

.header-link
	flex 1 1 10%
	font-size 1rem
	// text-align center
	color $black4
	font-family $title
	transition 0.5s all ease
	display flex
	align-items center
	justify-content center
	height $header-height
	@media all and (orientation landscape)
		height $header-height-landscape

.header-logout-button
	color $white
	// height 100%
	background-color $red0
	// padding 10px

.header-back-button
	color $white
