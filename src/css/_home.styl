.app-home
	// {$flex-row-wrap}
	max-height 100%
	// overflow-y hidden
	{$flex-row-wrap}
	// {$flex-col}
	flex 0 1 97.5%
	justify-content center
	align-items flex-start
	overflow-y auto
	@media all and (orientation landscape)
		justify-content space-around

.home__recent-timers,
.home__favorite-timers
	color $white
	// height 100%
	flex 0 1 49%
	@media all and (orientation portrait)
		flex 0 1 97.5%
	{$flex-col}
	align-items center
	justify-content center
	text-align center
	// overflow-y auto
	& > h1
		width 100%
		flex 1
		text-align center
		margin 15px 0 !important
	// @media all and (orientation portrait)
	// 	flex 1
		
	// @media all and (orientation landscape)
	// 	flex 0 1 47.5%
	// 	text-align center
.home__recent-timers-ul,
.home__favorite-timers-ul
	position relative
	flex 1
	width 100%
	margin 0
	padding 0
	overflow-y auto
	{$flex-row-wrap}
	align-items center
	justify-content center

.home__recent-timers-li,
.home__favorite-timers-li
	flex 0 1 100%
	color $white
	margin 2vmin 0
	padding 4vmin
	background-color $black1
	justify-content center
	{$flex-row-wrap}
	align-items center
	& > span
		flex 1 1 25%
		
// .home__recent-timers-li
// 	margin-right 10px

.home__recent-timers-timer-name,
.home__recent-timers-info-timerName,
.home__favorite-timers-timer-name
	flex 0 1 100% !important
	text-align center
	font-weight bold
	color $blue
	font-size 1.5rem
	margin-bottom 3vmin	
	
.home__recent-timers-info
	flex 0 30%
	align-self flex-start

.home__recent-timers-hide-info
	padding 1px
	background-color transparent
	position absolute
	right 5px
	bottom 5px
	font-size 1.5rem
	color $red

.home__recent-timers-info-totalTime
	font-weight bold
	margin-top 5px
	font-size 1.5rem
	color $green

.home__favorite-timers-li
	{$flex-row-wrap}
	align-items center
	// justify-content space-around
	& > *
		flex 0 1 40%

.home__recent-timers-start-button,
.home__recent-timers-info-button
	padding 2px
	text-align center
	font-size 1rem

.home__recent-timers-info-button
	margin-right 10px
	border 1px solid $white
	color $white
	
.home__recent-timers-start-button
	border 1px solid $green
	color $green
