.app-login
	align-self center
	{$flex-col-wrap}
	align-items center
	justify-content space-around
	
.login-title
	flex 1
	line-height 6rem !important
	text-align center
	font-size 6rem !important
	margin 20px !important

.login-facebook,
.login-google
	width 60%
	flex 0 1 15vmin
	margin 5px
	border-radius 5px
	border 0
	font-size 1rem
	padding 0px 15px

.login-create-account
	color $blue
	text-decoration underline
	&:hover
		text-decoration underline
		cursor pointer

.login-p
	font-size 1rem
	width 60%
	text-align center
	color $black4
