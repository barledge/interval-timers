.app-profile
	flex 0 1 100%
	{$flex-row-wrap}
	justify-content center
	align-items space-around

.profile-photo > img
	border-radius 50%
	width 450px

.profile-photo
	flex 0 1 50%
		
.profile-info
	flex 0 1 45%
	{$flex-row-wrap}
	& > p
		margin 10px
		font-size 1.15rem
		flex 0 1 75%
		
.profile-info-form
	flex 0 1 80%
	{$flex-row-wrap}
	align-items center
	justify-content space-between

.profile-button
	flex 0 1 75%
	margin-top 15px
	
.profile-label
	flex 0 1 20%
	text-align right
	
.profile-input
	flex 0 1 70%

.profile-edit-button
	flex 0 1 75%
	align-self flex-end
	
