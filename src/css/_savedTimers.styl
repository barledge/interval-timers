.app-saved-timers
	align-self flex-start
	{$flex-col}
	// {$flex-row-wrap}
	flex 0 1 97.5%
	color $white
	overflow hidden
	justify-content flex-start
	max-height 100%

.saved-timers__header
	// flex 1
	{$flex-row-wrap}
	align-items flex-start
	justify-content space-around
	flex none
	& > h1
		flex 0 1 100%
		text-align center
		margin 10px

.saved-timers__search
	{$input}
	flex 0 1 75%
	height 2vmax !important
	// margin 5px 0 !important
	padding 1.5vh !important
	margin 10px !important
	@media all and (orientation landscape)
		flex 0 1 20%
	&:focus
		margin 10px !important
		
.saved-timers__sort-button
	{$button}
	flex 0 1 22.5%
	font-size 1rem
	padding 0
	border 0
	border-bottom 1px solid $white
	align-self center
	// margin 5px 0 !important
	@media all and (orientation landscape)
		flex 0 1 15%
		// margin 10px 0 !important

.saved-timers__ul
	flex 0 1 100%
	list-style none
	margin 0
	padding 0
	overflow-y auto
	{$flex-row-wrap}
	align-items flex-start
	justify-content center
	
.saved-timers__li
	position relative
	flex 1 1 90%
	border 2px solid $black3
	padding 10px
	margin 5px
	{$flex-row-wrap}
	justify-content space-between
	// background-color $white
	
.saved-timers__timer-name
	font-size 1.25rem
	flex 1 1 40%
	text-align center
	align-self center
	
.saved-timers__option
	margin 5px
	flex 0 1 42.5%
	text-align center
	font-size 1rem
	@media all and (orientation landscape)
		flex 0 1 45%

.saved-timers__buttons
	flex 0 1 60%
	{$flex-row-wrap}
	justify-content center
	align-items center

.saved-timers__start-timer
	color $green
	border 1px solid $green

.saved-timers__delete-timer
	color $red
	border 1px solid $red

.saved-timers__info
	color $white
	border 1px solid $white
	{$flex-center-everything}
	

.saved-timers__edit-timer
	color $blue
	border 1px solid $blue

.saved-timers__info-value,
.saved-timers__hide-info-button
	flex 0 1 40%
	font-size 1rem
	margin 2px

.saved-timers__hide-info-button
	// border 1px solid $blue
	padding 1px
	background-color transparent
	position absolute
	right 5px
	bottom 5px
	font-size 1.5rem
	color $red

.saved-timers__info-totalTime
	font-weight bold
	font-size 1.5rem
	color $green
