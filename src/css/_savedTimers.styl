.app-saved-timers
	align-self flex-start
	flex 0 1 97.5%
	color $white
	& > h2
		flex 0 1 75%
		text-align center
		align-self flex-start

.saved-timers__ul
	flex 0 1 100%
	list-style none
	margin 0
	padding 0
	overflow-y auto
	height 95%
	${flex-row-wrap}
	align-items space-between
	justify-content center
	
.saved-timers__li
	position relative
	flex 0 1 100%
	border 2px solid $black3
	height 65px
	padding 10px
	margin 5px
	{$flex-row-wrap}
	justify-content space-between
	// background-color $white
	
.saved-timers__timer-name
	font-size 1.25rem
	flex 0 1 35%
	text-align center
	align-self center
	
.saved-timers__option
	margin 5px
	flex 0 1 40%
	text-align center

.saved-timers__buttons
	flex 0 1 60%
	{$flex-row-wrap}
	justify-content center
	align-items center

.saved-timers__start-timer
	color $green
	border 1px solid $green

.saved-timers__delete-timer
	color $red
	border 1px solid $red

.saved-timers__info
	color $white
	border 1px solid $white

.saved-timers__edit-timer
	color $blue
	border 1px solid $blue

.saved-timers__info-value,
.saved-timers__hide-info-button
	flex 0 1 40%

.saved-timers__hide-info-button
	// border 1px solid $blue
	padding 1px
	background-color transparent
	position absolute
	right 5px
	bottom 5px
	font-size 1.5rem
	color $red

.saved-timers__info-totalTime
	font-weight bold
	color $green
	
.saved-timers__sorting-div
	display flex
	align-items center
	justify-content space-around
	margin 10px 0

.saved-timers__sort-button
	{$button}
	flex 0 1 22.5%
	font-size 0.65rem
