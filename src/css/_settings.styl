.app-settings
	{$flex-col-wrap}
	width 97.5%
	align-items center
	justify-content center
	
.settings-div
	width 90%
	flex 0 1 10%
	margin 15px
	{$flex-row-wrap}
	justify-content space-between
	align-items center

.settings-label
	font-size 0.9rem
	flex 0 1 40%
	text-align right

.settings-input
	flex 0 1 45%
	height 30px !important

.settings-description
	font-size 1rem
	width 70%
	margin-bottom 25px
