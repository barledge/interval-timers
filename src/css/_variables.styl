$title = Lato
$content = 'Open Sans'

$header-height = 4vh
$header-height-landscape = 5vh

$flex-row-wrap =
	display flex
	flex-wrap wrap
	
$flex-col-wrap =
	display flex
	flex-direction column
	flex-wrap wrap
	
$flex-col =
	display flex
	flex-direction column
	
$blue = #7A8897
$pink = #AB8B82
$red = #7A2B1D
$white = #DBCDC9
$green = #22633E

$black0 = #090F12
$black1 = #161616
$black2 = #282828
$black3 = #474646
$black4 = #a5a5a5

$input =
	height 6vmax !important
	border-radius 2px !important
	border 1px solid $white !important
	background-color transparent !important
	color $pink !important
	margin 0 !important
	&:focus,
	&:active
		color $white !important
		outline none !important
		box-shadow 0px 0px 1px 1px $white !important
		margin 0 !important
	&::selection
		background-color white
		color $black2

$button =
	// align-self flex-end
	color $white
	border 2px solid $white
	padding 2px
	background-color transparent
	align-self flex-end
	&:active,
	&:focus
		outline none !important
		box-shadow 0px 0px 1px 1px $white
