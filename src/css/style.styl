@require './_variables.styl'
@require './_*.styl'

@import url('https://fonts.googleapis.com/css?family=Lato|Open+Sans');

body {
	background-color $black1
}

* {
	margin 0
	padding 0
	font-family $content
	// line-height 1.25rem
}

h1
	font-size 2rem !important
	font-family $title
	color $white
	
h2
	font-size 1.75rem !important
	font-family $title
	color $white
	
h3
	font-size 1.5rem !important
	font-family $title

#root
	height 100vh
	& > div
		{$flex-row-wrap}
		width 100%
		justify-content center
		// align-items space-between
		height 100%

[class$="title"]
	font-family "Open Sans"
	
[class^="app-"]
	height 80vh

p,
label
	font-family $content

.new-timer
	{$flex-row-wrap}
	// border 1px solid red
	& > input
		flex 0 1 50%
		
.form-label
	flex 0 1 25%

.edit-timer
	cursor pointer
	color blue
	&:hover
		text-decoration underline

.delete-timer
	cursor pointer
	color red
	&:hover
		text-decoration underline
		
.start-timer
	cursor pointer
	color green
	&:hover
		text-decoration underline
	
		
.save-timer
	flex 0 1 80%
	cursor pointer

.line-across
	border 3px solid black

