@require './_variables.styl'
@require './_*.styl'

@import url('https://fonts.googleapis.com/css?family=Lato|Open+Sans');

@media all and (max-width 736px)
	html
		font-size 16px

@media all and (max-width 667px)
	html
		font-size 14px

@media all and (max-width 568px)
	html
		font-size 12px

body {
	background-color $black1
}

* {
	margin 0
	padding 0
	font-family $content
}

h1
	font-size 2rem !important
	font-family $title
	color $white
	margin 0
	
h2
	font-size 1.75rem !important
	font-family $title
	color $white
	margin 0
	
h3
	font-size 1.5rem !important
	font-family $title
	margin 0
	
.page-content
	position fixed
	display flex
	// flex 0 1 100%
	width 100%
	justify-content center
	top 5vh
	bottom 5vh
	overflow-y auto
	@media all and (orientation landscape)
		top 7.5vh
		bottom 6.5vh
	
ul
	list-style none
	// margin 0
	// padding 0

.react-root
	display flex
	justify-content center
	height 100vh

.new-timer
	{$flex-row-wrap}
	// border 1px solid red
	& > input
		flex 0 1 50%
		
.form-label
	flex 0 1 25%

.edit-timer
	cursor pointer
	color blue
	&:hover
		text-decoration underline

.delete-timer
	cursor pointer
	color red
	&:hover
		text-decoration underline
		
.start-timer
	cursor pointer
	color green
	&:hover
		text-decoration underline
		
.save-timer
	flex 0 1 80%
	cursor pointer

.line-across
	border 3px solid black

